<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Kuliner">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_color_kuliner"
                android:padding="5dp"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOOD IN PATI"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"

                        >

                        <ImageView
                            android:id="@+id/pasar"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/pasar"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pasar"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/snack"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/snack"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snack"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/angkringan"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/eat"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Angkringan"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

            </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Khas Pati"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/sowel_kuliner"
                >
                <ImageView
                    android:src="@drawable/sowel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SOWEL"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/bandeng_kuliner"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bandeng"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BANDENG PRESTO"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/gandul_kuliner"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gandul"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="NASI GANDUL"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/petis_kuliner"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:src="@drawable/petisrunting"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="PETIS"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Tempe_kuliner"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nasipedes"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="NASI PEDES SEMANGIT"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/soto_kuliner"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sotokemiri"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SOTO KEMIRI"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/mangut_kuliner"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:src="@drawable/mangut"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginTop="113dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparant"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MANGUT"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </LinearLayout>


    </ScrollView>


</RelativeLayout>