<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BEF3ECEC"

    tools:context=".Pasar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/puri"
                    android:scaleType="centerCrop"
                    />
                 <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/judul_pasarpuri"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasar Puri"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />


                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/puri_selanjutnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="selanjutnya"
                        android:drawableLeft="@drawable/arrow"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                   android:id="@+id/trangkil"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/judul_pasartrangkil"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasar Trangkil"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />


                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/trangkil_selanjutnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="selanjutnya"
                        android:drawableLeft="@drawable/arrow"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/wedarijaksa"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/judul_pasarwedarijaksa"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasar Wedarijaksa"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />


                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/wedari_selanjutnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="selanjutnya"
                        android:drawableLeft="@drawable/arrow"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/pragolo"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/judul_pasarpragolo"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasar Pragolo"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />


                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/pragolo_selanjutnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="selanjutnya"
                        android:drawableLeft="@drawable/arrow"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/ngablak"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/judul_pasarngablak"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasar Ngablak"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />


                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/ngablak_selanjutnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="selanjutnya"
                        android:drawableLeft="@drawable/arrow"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>



